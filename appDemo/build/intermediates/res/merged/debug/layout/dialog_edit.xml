<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/dialog_wight"
        android:layout_height="wrap_content"
        android:background="@drawable/tool_bg_white_grayboard_circle"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/dialog_title"
            android:textSize="@dimen/text_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/line_color" />

        <EditText
            android:id="@+id/et_msm"
             android:textSize="@dimen/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/tool_et_bg"
            android:lines="1"
            android:minHeight="60dp"
            android:padding="15dp"
            android:singleLine="true" 
            android:textColor="@color/text_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_no"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_weight="1.0"
                android:background="@drawable/pressbg_list_item_board_circle"
                android:gravity="center"
                android:text="取消"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_title" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_weight="1.0"
                android:background="@drawable/pressbg_item_button"
                android:gravity="center"
                android:text="确定"
                android:textColor="@android:color/white"
            android:textSize="@dimen/text_title"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>