<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_bg_press" />
            <corners
        android:radius="5dp"/>
        </shape>
    </item>
    <!-- 普通状态 -->
    <item>
        <shape>
            <solid android:color="@color/btn_bg" />
             <corners
        android:radius="5dp"/>
        </shape>
    </item>
</selector>