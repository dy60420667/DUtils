<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_good_icon"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp">

        <com.jd.b2b.widget.CustomTextViewNoEnterFirst
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/dailoag_textcolor_title"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_title_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/dailoag_textcolor_title_third"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_title_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dailoag_textcolor_title_third"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/tv_title_third"/>
    </RelativeLayout>

</LinearLayout>