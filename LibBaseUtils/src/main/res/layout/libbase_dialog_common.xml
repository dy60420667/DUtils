<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_gray_round"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="选购商品全部无货选购商品全部无货选购商品全部无货选购商品全部无货选购商品全部无货选购商品全部无货"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:lineSpacingExtra="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/dailoag_textcolor_title"
        android:textSize="14sp" >
    </TextView>

    <View
        android:id="@+id/line_top"
        style="@style/divider_line" />

    <RelativeLayout
        android:id="@+id/ll_container"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cacheColorHint="@android:color/transparent"
            android:clipToPadding="false"
            android:divider="@color/line_color"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:scrollbars="none"
            android:smoothScrollbar="true"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="15dp"
            android:textColor="@color/dailoag_textcolor_title"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        style="@style/divider_line" />

    <LinearLayout
        android:id="@+id/ll_twobtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_two_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="更改收货地址"
            android:textColor="@color/dailoag_textcolor_title"
            android:background="@drawable/libbase_dialog_bg_leftbtn"
            android:textSize="13sp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/tv_twobtn_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="返回购物车"
            android:textColor="@color/white"
            android:background="@drawable/libbase_dialog_bg_rightbtn"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_onebtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_onebtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="更改收货地址"
            android:textColor="@color/white"
            android:background="@drawable/libbase_dialog_bg_onebtn"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>