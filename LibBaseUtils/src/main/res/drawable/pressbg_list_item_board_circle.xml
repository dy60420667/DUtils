<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/list_item_press" />
             <stroke android:width="@dimen/line_height"
                android:color="@color/line_color"/>
             <corners android:radius="@dimen/tool_circle_radios"/>
        </shape>
    </item>
    <!-- 普通状态 -->
    <item>
        <shape>
            <solid android:color="@color/list_item" />
           <stroke android:width="@dimen/line_height"
                android:color="@color/line_color"/>
            <corners android:radius="@dimen/tool_circle_radios"/>
        </shape>
    </item>
</selector>