<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dip" />
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/updater_line_color_light"
                android:startColor="@color/updater_line_color_light" />
        </shape>
    </item>
 
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="4dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/updater_line_color"
                    android:startColor="@color/updater_line_color" />
            </shape>
        </clip>
    </item>
 
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/updater_color_item_normal"
                    android:startColor="@color/updater_color_item_normal" />
            </shape>
        </clip>
    </item>
</layer-list>