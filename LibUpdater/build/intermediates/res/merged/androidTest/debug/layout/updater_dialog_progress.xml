<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/updater_width"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_circle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/updater_color_text_norml"
            android:text="@string/updater_downloading" />
        <TextView
            android:id="@+id/tv_title_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:visibility="gone"
            android:textColor="@color/updater_color_item_normal"
            android:text="@string/updater_downloading" />

        <View
            android:id="@+id/line"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/updater_line_height"
            android:background="@color/updater_line_color" />


        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/ProgressBar_Mini2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/text_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/updater_color_text_norml"
                android:text="@string/updater_loading" />

            <TextView
                android:id="@+id/text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:text="" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:background="@drawable/pressbg_orange_orangedark_board"
            android:text="@string/updater_download_restart" />


    </LinearLayout>
</LinearLayout>